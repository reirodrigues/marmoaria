<%- include('includes/head')%> <%- include('includes/nav')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Editar tipo de conta</h1>
      <p class="text-center">Substitua os campos desejados depois clique em 'Salvar'</p>

      <%- include('includes/messages')%>

      <% if(conta._id) { %> 
        <form action="/conta/edit/<%= conta._id %> " method="POST" class="my-5">

        <% } else { %> 

          <form action="/conta/register" method="POST" class="my-5">
        <% } %> 



        <div class="form-group my-3">
          <label for="inputAddress">Tipo de conta:</label>
          <input
            value="<%= conta.tipoConta %>"
            type="text"
            class="form-control"
            name="tipoConta"
          />
        </div>

        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="true" id="cbEntrada" name="entrada">
          <label class="form-check-label" for="mycheckbox">
            Entrada
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="true" id="cbSaida" name="saida">
          <label class="form-check-label" for="mycheckbox">
            Saida
          </label>
        </div>


        <button type="submit" class="btn btn-primary my-3">Salvar</button>
      </form>
    </div>
  </div>

  <%- include('includes/footer')%>
</div>
