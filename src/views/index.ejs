<%- include('includes/head')%> <%- include('includes/nav')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="my-3">
      <h1 class="text-center">Financeiro</h1>
      <p class="text-center lead">Pedidos cadastrados no sistema</p>

      <a
        href="/pedido"
        type="button"
        class="align-self-center btn btn-outline-primary mt-5"
        >Cadastrar novo pedido</a
      >

      <%- include('includes/messages')%>

      <table
        id="tabela"
        class="table table-striped table-hover rounded shadow-lg"
        style="width: 100%"
      >
        <thead>
          <tr>
            <th>Vencimento Original</th>
            <th>Data Pagamento</th>
            <th>Classificação</th>
            <th>Valor</th>
            <th>Tipo de conta</th>
            <th>Cliente</th>
            <th>Origem</th>
            <th>Status</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% pedidos.forEach(pedido => { %>
          <tr>
            <td><%= pedido.vencimentoOriginal %></td>
            <td><%= pedido.dataPagamento %></td>
            <td>
              <% if (pedido.classificacao == 'true') { %>Entrada<% } else {
              %>Saida<% } %>
            </td>
            <td>R$<%= pedido.valor %></td>
            <td><%= pedido.tipoConta %></td>
            <td><%= pedido.cliente %></td>
            <td><%= pedido.origem %></td>
            <td><%= pedido.status %></td>
            <td><a href="/pedido/<%= pedido._id%>">Editar</a></td>
          </tr>
          <% }); %>
        </tbody>
      </table>

      <%- include('includes/footer')%>
    </div>
  </div>
</div>
