<%- include('includes/head')%> <%- include('includes/nav')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">
      <h1 class="text-center">Cadastrar novo pedido</h1>
      <p class="text-center">Insira os dados do pedido e clique em 'Salvar'</p>

      <%- include('includes/messages')%>

      <% if(pedido._id) { %> 
        <form action="/pedido/edit/<%= pedido._id %> " method="POST" class="my-5">

        <% } else { %> 

          <form action="/pedido/register" method="POST" class="my-5">
        <% } %> 


        <div class="form-row">
          <div class="form-group">
            <label for="inputEmail4">Data de pagamento:</label>
            <input
              value="<%= pedido.dataPagamento %>"
              type="date"
              class="form-control"
              name="dataPagamento"
            />
          </div>
          <div class="form-group my-3">
            <label for="inputPassword4">Classificação:</label>
            <input
              value="<%= pedido.classificacao %>"
              type="text"
              class="form-control"
              name="classificacao"
            />
          </div>
        </div>
        <div class="form-group my-3">
          <label for="inputAddress">Valor:</label>
          <input
            value="<%= pedido.valor %>"
            type="number"
            min="0.00" 
            max="10000.00" 
            step="0.01"
            class="form-control"
            name="valor"
          />
        </div>
        <div class="form-group my-3">
          <label for="inputAddress2">Tipo conta:</label>
          <input
            value="<%= pedido.tipoConta %>"
            type="text"
            class="form-control"
            name="tipoConta"
          />
        </div>
        <div class="form-group my-3">

          <label for="exampleDataList" class="form-label">Cliente:</label>
          <input name="cliente" class="form-control" list="datalistOptions" id="exampleDataList" placeholder="Selecione o cliente...">
          <datalist id="datalistOptions">
            <% clientes.forEach(cliente => { %>
              <option value="<%= cliente.nome %>"><%= cliente.cnpj %></option>
          <% }); %>
          </datalist>


        </div>
        <div class="form-group my-3">
          <label for="inputAddress2">Origem:</label>
          <input
            value="<%= pedido.origem %>"
            type="text"
            class="form-control"
            name="origem"
          />
        </div>
        
        <div class="d-flex justify-content-between">
          <button type="submit" class="btn btn-primary my-3">Salvar</button>
          <a class="btn btn-primary my-3" href="/" role="button">Voltar</a>
        </div>
      </form>
    </div>
  </div>

  <%- include('includes/footer')%>
</div>
