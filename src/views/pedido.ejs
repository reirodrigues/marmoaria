<%- include('includes/head')%> <%- include('includes/nav')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">
      <h1 class="text-center">Cadastrar novo pedido</h1>
      <p class="text-center">Insira os dados do pedido e clique em 'Salvar'</p>

      <%- include('includes/messages')%>

      <% if(pedido._id) { %> 
        <form action="/pedido/edit/<%= pedido._id %> " method="POST" class="my-5">

        <% } else { %> 

          <form action="/pedido/register" method="POST" class="my-5">
        <% } %> 


        <div class="form-row">
          <div class="form-group my-3">
            <label for="inputEmail4">Vencimento Original:</label>
            <input
              value="<%= pedido.vencimentoOriginal %>"
              type="date"
              class="form-control"
              name="vencimentoOriginal"
            />
          <div class="form-group my-3">
            <label for="inputEmail4">Data pagamento:</label>
            <input
              value="<%= pedido.dataPagamento %>"
              type="date"
              class="form-control"
              name="dataPagamento"
            />
          </div>
          
          <div class="form-group my-3">
            <label for="inputPassword4">Classificação:</label>
            <input
            value="<%= pedido.classificacao %>"
            type="text"
            class="form-control"
            name="classificacao"
          />
          </div>
        </div>
        <div class="form-group my-3">
          <label for="inputAddress">Valor:</label>
          <input
            value="<%= pedido.valor %>"
            type="number"
            min="0.00" 
            max="10000000.00" 
            step="0.01"
            class="form-control"
            name="valor"
          />
        </div>
        <div class="form-group my-3">
          <label class="form-label">Tipo de conta:</label>
          <select name="tipoConta" id="select-state" placeholder="Selecione o tipo da conta...">
            <option value="">Slecione o cliente</option>
            <% contas.forEach(conta => { %>
              <option value="<%= conta.tipoConta %>"><%= conta.tipoConta %></option>
          <% }); %>
          </select>


        </div>
        <div class="form-group my-3">

          <label class="form-label">Cliente:</label>
          <select name="cliente" id="select-state2" placeholder="Selecione o cliente...">
            <option value="">Slecione o cliente</option>
            <% clientes.forEach(cliente => { %>
              <option value="<%= cliente.nome %>"><%= cliente.nome %></option>
          <% }); %>
          </select>


        </div>
        <div class="form-group my-3">
          <label class="form-label">Origem:</label>
          <select name="origem" id="select-state3" placeholder="Selecione a Origem...">
            <% origens.forEach(origem => { %>
              <option value="<%= origem.origem %>"><%= origem.origem %></option>
          <% }); %>
          </select>


        </div>

        <div class="form-group my-3">
          <label for="inputAddress2">Status:</label>
          <input
            value="<%= pedido.status %>"
            type="text"
            class="form-control"
            name="status"
          />
        </div>
        
        <div class="d-flex justify-content-between">
          <button type="submit" class="btn btn-primary my-3">Salvar</button>
          <a class="btn btn-primary my-3" href="/" role="button">Voltar</a>
        </div>
      </form>
    </div>
  </div>

  <%- include('includes/footer')%>
</div>
